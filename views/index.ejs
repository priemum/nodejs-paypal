<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOJA TI</title>
    <style>
        *, body {
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: 300;
        }
        .header {
            height: 200px;
            background-color: #161366;
            color: white;
        }
        .flex {
            display: flex;
        }
        .flex-center {
            justify-content: center;
            align-items: center;
        }
        .horizontal {
            flex-direction: row;
        }
        .vertical {
            flex-direction: column;
        }
        .flex1 {
            flex: 1;
        }
        .text-center {
            text-align: center;
        }
        .img-produto {
            width: 80%;
        }
        .titulo-produto {
            margin: 10px 0;
        }
        .preco-produto {
            font-weight: bold;
            font-size: 2.5rem;
            color: #0011ff;
        }
        .preco-produto > span{
            font-size: 1rem;
            color: #000;
        }
        .btn-comprar {
            background-color: #cc1100;
            color: #fefefe;
            border: 0;
            cursor: pointer;
            border-radius: 10px;
            margin: 15px 0;
            padding: 10px 15px;
            font-size: 1.3rem;
        }
        .btn-comprar:hover{
            background-color: #991100;
        }
    </style>
</head>
<body>
    <div>
        <header class="header flex flex-center">
            <h1 class="titulo">LOJA TI</h1>
        </header>
        <br />
        <br />
        
        <div class="flex horizontal">
            <% for(var i=0; i<products.length; i++){ %>
                <div class="flex-1 flex vertical">
                    <div class="flex flex-center">
                        <img src="<%= products[i].img %>" class="img-produto">
                    </div>
                    <br />
                    <h1 class="titulo-produto text-center"><%= products[i].titulo %></h1>
                    <p  class="descricao-produto text-center"><%= products[i].descricao %></p>
                    <br />
                    <h2  class="preco-produto text-center"><span>Apenas R$ </span><%= products[i].preco %></h2>
    
                    <form class="flex flex-center" action="/buy?id=<%= products[i].id %>" method="POST">
                        <input class="btn-comprar text-center" type="submit" value="COMPRE AGORA!"/>
                    </form>
                </div>
            <%}%>
        </div>
        <br />
        <br />
    </div>
</body>
</html>