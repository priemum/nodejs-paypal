<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOJA TI</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<body>
    <div>
        <header class="header flex flex-center">
            <h1 class="titulo">LOJA TI</h1>
        </header>
        <br />
        <br />
        
        <div class="flex horizontal">
            <% for(var i=0; i<products.length; i++){ %>
                <div class="flex-1 flex vertical">
                    <div class="flex flex-center">
                        <img src="<%= products[i].img %>" class="img-produto">
                    </div>
                    <br />
                    <h1 class="titulo-produto text-center"><%= products[i].titulo %></h1>
                    <p  class="descricao-produto text-center"><%= products[i].descricao %></p>
                    <br />
                    <h2  class="preco-produto text-center"><span>Apenas R$ </span><%= products[i].preco %></h2>
    
                    <form class="flex flex-center" action="/buy?id=<%= products[i].id %>" method="POST">
                        <input class="btn-comprar text-center" type="submit" value="COMPRE AGORA!"/>
                    </form>
                </div>
            <%}%>
        </div>
        <br />
        <br />
    </div>
</body>
</html>